#!/usr/bin/env ruby
$:.unshift(File.dirname(__FILE__) + '/../lib') unless $:.include?(File.dirname(__FILE__) + '/../lib')

require 'hobostove'
require 'gli'

include GLI::App

program_desc "A command line Campfire client"

desc "Start hobostove"
command :start do |c|
  c.action do
    Hobostove::Window.new.connect
  end
end

default_command :start

exit run(ARGV)
